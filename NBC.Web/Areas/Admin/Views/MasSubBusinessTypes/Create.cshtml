        var PId = $('.selectBusiness').val();
        var url = "/Admin/MasSubBusinessTypes/DDLBusiness/" + PId;
        var max;
        $.ajax({
            url: url,
            async: false,
            dataType: 'json',
            success: function (data) {

                 max = getMax(data, 'Id');


            }
        });

        $('.BussinessID').val($('.selectBusiness').val());
        //$('.amphurID').val(max.Id);

    });
    function getMax(array, propName) {
        var max = 0;
        var maxItem = null;
        for (var i = 0; i < array.length; i++) {
            var item = array[i];
            if (item[propName] > max) {
                max = item[propName];
                maxItem = item;
            }
        }

        return maxItem;
    }

</script>
