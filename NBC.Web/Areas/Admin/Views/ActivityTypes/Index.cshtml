@using NBC.Models
@model IEnumerable<ActivityType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container">
        <div class="row">
            <h2 class="text-center">ประเภทกิจกรรมทั้งหมด</h2>
                <div>
                    <button class="openCreateBox btn btn-primary btn-xs" data-title="create" data-toggle="modal" data-target="#create">เพิ่มประเภทกิจกรรม</button>

                </div>
        </div>

        <div class="row">


            <div class="col-md-12">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

                    <thead>

                        <tr>

                            <th>
                               ลำดับ  
                            </th>
                            <th>
                                ตัวย่อ
                            </th>
                            <th>
                               ชื่อประเภทกิจกรรม
                            </th>
                            <th>
                                แก้ไข
                            </th>
                            <th>
                                ลบ
                            </th>
                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>

                                </td>
                                <td id="Name">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td class="Std">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="แก้ไข"> <button class="openEditBox btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-show-id="@item.Id" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>
                                </td>
                                <td class="MA">
                                    <p data-placement="top" data-toggle="tooltip" title="ลบ"><button class="openDeleteBox btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-show-id="@item.Id" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>
                                    @*<p data-placement="top" data-toggle="tooltip" title="ดูข้อมูล"><button class="openDetailBox btn btn-info btn-xs" data-title="Detail" data-toggle="modal" data-year-id="@item.Id" data-target="#detail"><span class="glyphicon glyphicon-user"></span></button></p>*@
                                </td>
                            </tr>

                        }
                    </tbody>



                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="create">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">เพิ่มข้อมูล</h4>
                </div>
                <div class="modal-body">
                    <p>Error&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal fade" tabindex="-1" role="dialog" id="edit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">แก้ไขข้อมูล</h4>
                </div>
                <div class="modal-body">
                    <p>Error&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal fade" tabindex="-1" role="dialog" id="delete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">ท่านต้องการที่จะลบข้อมูลนี้ใช่หรือไม่?</h4>
                </div>
                <div class="modal-body">
                    <p>Error&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</body>



