<script>

    $(document).ready(function () {

        var t = $('#example').DataTable({
            "columnDefs": [{
                "searchable": false,
                "orderable": false,
                "targets": 0
            }],
            "order": [[1, 'asc']],
            dom: 'Bfrtip',
            buttons: [
                 'copy', 'csv', 'excel', 'pdf', 'print'
            ],


        });

        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
        $('.openCreateBox').on('click', function (event) {
            var button = $(this)
            var Id = button.data('showId')

            var modal = $("#create")

            var url = "/Admin/ActivityTypes/Create/";
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        $('.openEditBox').on('click', function (event) {
            var button = $(this) 
            var Id = button.data('showId')

            var modal = $("#edit")

            var url = "/Admin/ActivityTypes/Edit/" + Id;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        $('.openDeleteBox').on('click', function (event) {
            var button = $(this) 
            var Id = button.data('showId')
            var modal = $("#delete")
            var url = "/Admin/ActivityTypes/Delete/" + Id;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });




    });




</script>
