        var max;
        $.ajax({
            url: url,
            async: false,
            dataType: 'json',
            success: function (data) {
                
                 max = getMax(data, 'Id');

               
            }
        });


        $('.amphurID').val($('.selectAmphur').val());
        $('.tambolID').val(max.Id);

    });
    function getMax(array, propName) {
        var max = 0;
        var maxItem = null;
        for (var i = 0; i < array.length; i++) {
            var item = array[i];
            if (item[propName] > max) {
                max = item[propName];
                maxItem = item;
            }
        }

        return maxItem;
    }

</script>


