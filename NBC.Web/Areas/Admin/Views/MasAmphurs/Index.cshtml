<script>

    $(document).ready(function () {

        var table = $('#example').DataTable({

            dom: 'Bfrtip',


            buttons: [

                'copy', 'csv', 'excel', 'pdf', 'print'

            ],
            //"columnDefs": [{
            //    "searchable": false,
            //    "orderable": false,
            //    "targets": 0
            //}],
            //"order": [[1, 'asc']]


        });

        $('.openEditBox').on('click', function (event) {
            var button = $(this)
            var Id = button.data('showId')

            var modal = $("#edit")

            var url = "/Admin/MasAmphurs/Edit/" + Id;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        $('.openDeleteBox').on('click', function (event) {
            var button = $(this)
            var Id = button.data('showId')
            var modal = $("#delete")
            var url = "/Admin/MasAmphurs/Delete/" + Id;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });



        $('.openCreateBox').on('click', function (event) {
            var button = $(this)
            var modal = $("#create")
            var url = "/Admin/MasAmphurs/Create";
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        table.on('order.dt search.dt', function () {
            //t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
            //    cell.innerHTML = i + 1;
            //});
        }).draw();



    });




</script>
