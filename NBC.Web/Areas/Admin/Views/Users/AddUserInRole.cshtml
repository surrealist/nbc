<form action="~/Admin/Users/DeleteUserInRole" method="post">
    <table id="UserInRoles" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ลำดับที่</th>
                <th>สิทธิ์ในการใช้งาน</th>
                <th>หน่วยงาน</th>
                <th>ลบ</th>

            </tr>
        </thead>
        <tbody>

            @{
                int count = 1;
                foreach (var role in Model.UserInRoles)
                {
                    // var id = Convert.ToString(role.Id);
                    <tr>
                        <td>@(count++)</td>
                        <td>
                            @Html.Label(role.Role.RoleName)
                        </td>
                        <td>
                            @{
                                if (role.WorkAt != null)
                                {
                                    @Html.Label(role.WorkAt.Name)
                                }
                            }

                        </td>
                        <td>
                            @{
                                if (role.Role.RoleName != "Subscribers")
                                {

                                    <button type="button" class="delete btn btn-danger btn-xs" data-userinrole-id="@role.Id">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>

                                }
                            }


                        </td>
                    </tr>
                                }
            }


        </tbody>
    </table>
</form>
