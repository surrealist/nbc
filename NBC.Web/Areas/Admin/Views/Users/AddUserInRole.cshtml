            ],
        });
        var count = @count;
        var roleName;
        $('.btnSaveUserInRole').click(function () {
            //  var $label = $('label[for="btnSaveUserInRole"]');
            var User_Id = @Model.Id;
            //parseInt($label.text());
            var Role_Id = $('.selectRole').val();
            var WID = $('.selectWorkAt').val();
            roleName = $('.selectRole').find('option:selected').text();
            var url = "@Url.Content("~/Admin/Users/SaveUserInRole")" + "/" + User_Id + "?UserRole_Id=" + Role_Id + "&WID=" + WID + "&roleName=" + roleName;
            // var url = "/Admin/Users/SaveUserInRole/" + User_Id + "?UserRole_Id=" + Role_Id;

            $.post(url,function(result) {

                if (result="OK"){
                    location.reload();
                }


            });

        });
        $("table#UserInRoles").on("click", "button.delete", function () {

            var UserInRoleId = $(this).data("userinroleId");
            var url = "@Url.Content("~/Admin/Users/DeleteUserInRole")" + "/" + UserInRoleId;
            var tr = $(this).parents("tr");
            $.post(url, function (result) {
                if (result == "OK") {
                    tr.remove();
                    //location.reload();
                } else {
                    alert(result);
                }

            });


        });
        $('.selectRole').change(function(){
            var roleId = $('.selectRole').val();
            roleName = $('.selectRole').find('option:selected').text();
            var url = "/Admin/Users/DDLWorkAtList/" + roleId;
            var mydata = [];
            var $jsontwo = $('.selectWorkAt');
            $jsontwo.empty();
            $jsontwo.append($("<option />").val(0).text("กรุณาเลือก"));
            if(roleName=="SV"||roleName=="Unit"){
                $.ajax({
                    url: url,
                    async: false,
                    dataType: 'json',
                    success: function (data) {

                        var obj = data;

                        //$jsontwo.append($("<option />").val(0).text("กรุณาเลือก"));
                        $.each(obj, function(index, value) {
                            var name = value["Alias"];
                            var id = value["Id"];
                            $jsontwo.append($("<option />").val(id).text(name));

                        });
                    }
                });
            }


        });

