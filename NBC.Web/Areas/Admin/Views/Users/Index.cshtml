@using NBC.Models
@model IEnumerable<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>รายชื่อผู้ใช้งานระบบ</h2>
<body>
    <div class="container">
        <div class="row">
            <p>
                @*@Html.ActionLink("เพิ่มผู้ใช้งานระบบ", "Create")*@
                <button class="openCreateBox btn btn-primary btn-xs" data-title="create" data-toggle="modal" data-target="#create">เพิ่มผู้ใช้งานระบบ</button>
</p>
        </div>

        <div class="row">


            <div class="col-md-12">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

                    <thead>

                        <tr>

                            <th hidden="hidden">
                                <b> ID</b>
                            </th>
                            <th>
                                รหัสผู้ใช้งาน
                            </th>
                            <th>
                                ชื่อ - นามสกุล
                            </th>
                            <th>
                                เลขประจำตัวประชาชน
                            </th>
                            <th>
                                เบอร์โทร
                            </th>
                            <th>
                                เบอร์มือถือ
                            </th>
                            <th>
                                Fax
                            </th>
                            <th>
                                อีเมลล์
                            </th>
                            <th>
                                แก้ไขข้อมูล
                            </th>
                            <th>
                                กำหนดสิทธ์ผู้ใช้งาน
                            </th>
                            <th>
                                ดูข้อมูล
                            </th>
                            <th>
                                ลบข้อมูล
                            </th>
                            
                            <th>
                                เปิด/ปิดการใช้งาน
                            </th>
                           
                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td id="ID" hidden="hidden">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>

                                <td class="Std">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.CardId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.Tel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.Fax)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => @item.Email)
                                </td>
                                <td>


                                    <p data-placement="top" data-toggle="tooltip" title="แก้ไข"> <button class="openEditBox btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-user-id="@item.Id" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>





                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="กำหนดสิทธิ์"> <button class="openAddUerInRoleBox btn btn-warning btn-xs" data-title="addUerInRole" data-toggle="modal" data-user-id="@item.Id" data-target="#addUerInRole"><span class="glyphicon glyphicon-eye-open"></span></button></p>
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="ดูข้อมูล"><button class="openDetailBox btn btn-info btn-xs" data-title="Detail" data-toggle="modal" data-user-id="@item.Id" data-target="#detail"><span class="glyphicon glyphicon-user"></span></button></p>
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="ลบ"><button class="openDeleteBox btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-user-id="@item.Id" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>
                                </td>
                               
                                <td>
                                    @if (item.isEnable == true)
                                    {
                                        <button id="year" name="year" class="enableUser glyphicon glyphicon-ok" data-title="EnableUser" data-toggle="modal" data-user-id="@item.Id"></button>
                                    }
                                    else
                                    {
                                        <button id="year" name="year" class="enableUser btn btn-default" data-title="EnableUser" data-toggle="modal" data-user-id="@item.Id"></button>
                                    }
                                </td>
                               
                            </tr>

                        }
                    </tbody>



                </table>
            </div>
        </div>

    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="edit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">แก้ไขข้อมูลผู้ใช้งาน</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade" tabindex="-1" role="dialog" id="addUerInRole">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">กำหนดสิทธิ์ผู้ใช้งานระบบ</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal fade" tabindex="-1" role="dialog" id="detail">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">ข้อมูลผู้ใช้งาน</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade" tabindex="-1" role="dialog" id="delete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">ลบข้อมูลผู้ใช้งานระบบ</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade" tabindex="-1" role="dialog" id="create">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">เพิ่มผู้ใช้งานระบบ</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</body>

