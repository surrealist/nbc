@using NBC.Models
@model IEnumerable<NBC.Models.MasCareerType>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container">
        <div class="row">
            <h2 class="text-center">อาชีพทั้งหมด</h2>
            <p>

                <button>@Html.ActionLink("เพิ่มอาชีพ", "Create")</button>
            </p>
        </div>

        <div class="row">


            <div class="col-md-12">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

                    <thead>

                        <tr>

                            <th>
                                ID
                            </th>
                            <th>
                                อาชีพ
                            </th>
                            <th>

                            </th>
                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td id="Name">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td class="Std">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="MA">

                                    <p data-placement="top" data-toggle="tooltip" title="แก้ไข"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>
                                    <p data-placement="top" data-toggle="tooltip" title="ลบ"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>
                                    @*<p data-placement="top" data-toggle="tooltip" title="ดูข้อมูล"><button class="btn btn-info btn-xs" data-title="Detail" data-toggle="modal" data-target="#detail"><span class="glyphicon glyphicon-user"></span></button></p>*@

                                </td>
                            </tr>

                        }
                    </tbody>



                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">แก้ไขข้อมูลปีงบประมาณ</h4>
                </div>
                <div class="modal-body">
                    @{
                        foreach (var it in Model)
                        {
                            @Html.Partial("Edit", it)
                        }

                    }


                </div>
                <div class="modal-footer ">

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>



    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">ข้อความแจ้งเตือน</h4>
                </div>
                <div class="modal-body">

                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span>คุณต้องการที่จะลบข้อมูลนี้ใช่หรือไม่</div>

                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> ใช่ ต้องการลบ</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> ไม่ใช่</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="detail" tabindex="-1" role="dialog" aria-labelledby="detail" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">ข้อมูลปีงบประมาณ</h4>
                </div>
                <div class="modal-body">
                    @{


                        foreach (var it in Model)
                        {
                            try
                            {
                                if (Session["SELECTED"].ToString() == it.Name)
                                {
                                    @Html.Partial("Details", it)
                                }
                            }
                            catch (Exception)
                            {


                            }


                        }

                    }

                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>



