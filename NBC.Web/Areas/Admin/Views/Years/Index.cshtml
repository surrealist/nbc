<script>

    $(document).ready(function () {

        var table = $('#example').DataTable({

            dom: 'Bfrtip',

            buttons: [

                'copy', 'csv', 'excel', 'pdf', 'print'

            ],


        });
        $('.openEditBox').on('click', function (event) {
            var button = $(this) // Button that triggered the modal
            var yearId = button.data('yearId') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).

            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $("#edit")

            var url = "/Admin/Years/Edit/" + yearId;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        $('.openDetailBox').on('click', function (event) {
            var button = $(this) // Button that triggered the modal
            var yearId = button.data('yearId') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).

            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $("#detail")

            var url = "/Admin/Years/Details/" + yearId;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });
        $('.openDeleteBox').on('click', function (event) {
            var button = $(this) // Button that triggered the modal
            var yearId = button.data('yearId') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).

            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $("#delete")

            var url = "/Admin/Years/Delete/" + yearId;
            $.get(url).success(function (html) {
                modal.find(".modal-body").html(html);
                modal.modal("show");
            })
        });

        
        $('#example tbody').on('click', '.cur', function () {

            var data = table.row(this).data();
            alert('คุณต้องการเซ็ทค่าปี ' + data[0] + ' ให้เป็นปีปัจจุบันใช่หรือไม่');
            $.session.set('SELECTED', data[0])
            $.post('/Admin/Years/SetCurrentYear',
                  { year: (data[0]) }, function (c) {
                      if (c.success == true) {
                          alert("ระบบได้เปลี่ยนปีปัจจุบันเรียบร้อยแล้ว");
                      } else {
                          alert("การเปลี่ยนปีปัจจุบันไม่สำเร็จ กรุณาติดต่อเจ้าหน้าที่ดูแลระบบ");
                      }

                      location.reload();
                  });

        });
        $('#example tbody').on('click', '.lock', function () {

            var data = table.row(this).data();
            alert('คุณต้องการล๊อกค่าปี ' + data[0] + ' ใช่หรือไม่');
            $.session.set('SELECTED', data[0])
            $.post('/Admin/Years/SetIsLockYear',
                  { year: (data[0]) }, function (c) {
                      if (c.success == true) {
                          alert("ระบบได้ล๊อกปี " + data[0] + " เรียบร้อยแล้ว");
                      } else {
                          alert("การล๊อกปีไม่สำเร็จ กรุณาติดต่อเจ้าหน้าที่");
                      }

                      location.reload();
                  });

        });



    });




</script>
